        <h1><i class="fas fa-hard-hat"></i> Nouveau pointage<span
                    class="text-danger">.</span></h1>
        <div class="rounded overflow-hidden shadow-lg bg-white px-3 pb-1">
            <div class="py-3">{{ include('pointage/_form.html.twig') }}</div>
            <footer class="row bg-light p-3 rounded">
                <div class="col">
                    <a href="{{ path('pointage_index') }}" class="btn btn-dark"><i class="fas fa-backward"></i></a>
